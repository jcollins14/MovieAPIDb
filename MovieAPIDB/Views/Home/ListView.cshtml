@model Search
@{
    ViewData["Title"] = "ListView";
}

<h1>Search Results</h1>
<hr />
<div>
<table class="table">
    <thead>
        <tr>
            <th>
                Poster
            </th>
            <th>
                Title
            </th>
            <th>
                Year
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Results.Count; i++)
            {
                <tr>
                    <td>
                        @if (Model.Results[i].Poster == "N/A")
                        {
                            <img src="~/images/notavailable.jpg" height="300" width="200"/>
                        }
                        else
                        {
                            <img src=@Model.Results[i].Poster height="300" width="200" />
                        }
                    </td>
                    <td style="vertical-align:middle">
                        @Model.Results[i].Title
                    </td>
                    <td style="vertical-align:middle">
                        @Model.Results[i].Year
                    </td>
                    <td style="vertical-align:middle">
                        <input type="button" value="Summary" class="btn btn-primary" onclick="location.href='@Url.Action("DetailedMovieView", new { imdb = Model.Results[i].ImdbID })'" />
                    </td>
                </tr>   
            }
        }
    </tbody>
    </table>
   </div>


